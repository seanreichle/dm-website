<%= form_for @casestudy, :html => {:class => "nice"} do |f| %>
  <% if @casestudy.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@casestudy.errors.count, "error") %> prohibited this casestudy from being saved:</h2>

      <ul>
      <% @casestudy.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "input-text"%>
  </div>
  <div class="field">
    <%= f.label :tagline %>
    <%= f.text_field :tagline, :class => "input-text" %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :goals %>
    <%= f.text_area :goals %>
  </div>
  <div class="field">
    <%= f.label :achievements %>
    <%= f.text_area :achievements %>
  </div>
  <div class="field">
    <%= f.label :results %>
    <%= f.text_area :results %>
  </div>
  <% f.fields_for @project, :project do |r| %>
      <div class="field">
        <%= r.label :title %>
        <%= r.text_field :title %>
      </div>
      <div class="field">
        <%= r.label :description %>
        <%= r.text_area :description %>
      </div>
      <div class="field">
        <%= r.label :artwork %>
        <%= r.text_field :artwork %>
      </div>
      <div class="field">
        <%= r.label :category %>
        <%= r.text_field :category %>
      </div>
  <% end %>
  <div class="actions">
    <%= f.submit 'Save Case Study', :class => "nice small radius blue button" %>
  </div>
<% end %>
